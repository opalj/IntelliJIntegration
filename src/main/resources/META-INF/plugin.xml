<idea-plugin>
    <id>23.bytecode-disassembler</id>
    <name>OPAL Integration</name>
    <vendor email="marcel.dieter@stud.tu-darmstadt.de">Gruppe23</vendor>

    <description><![CDATA[
    OPAL Framework integration for IntelliJ IDEA.<br>
    ]]></description>

    <version>0.1.1</version>
    <!-- until-build version is looking into the future might be wrong!! -->
    <idea-version since-build="183.4588.61"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Outline"
                    factoryClass="toolWindows.OutlineToolWindowFactory"
                    anchor="left"
                    secondary="true"/>

        <toolWindow id="Disassembler"
                    factoryClass="toolWindows.DisassemblerToolWindowFactory"
                    anchor="right"
                    secondary="true"/>
        <fileEditorProvider implementation="HTMLEditor.MyFileEditorProvider"
                            id="My File Editor Provider"/>
        <fileTypeFactory implementation="syntaxHighlighting.TAC_fileTypeFactory"/>
        <lang.parserDefinition language="TAC" implementationClass="syntaxHighlighting.TAC_parserDefinition"/>
        <lang.syntaxHighlighterFactory language="TAC" implementationClass="syntaxHighlighting.TAC_syntaxHighlighterFactory"/>
        <colorSettingsPage implementation="syntaxHighlighting.TAC_colorSettingsPage"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>loadClassFile.LoadClassFileComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>