<idea-plugin>
    <id>23.bytecode-disassembler</id>
    <name>Bytecode Disassembler</name>
    <vendor url="">OpalJ</vendor>

    <description><![CDATA[
    OPAL Framework integration for IntelliJ IDEA.<br>
    ]]></description>

    <change-notes>drop'down added , some new functionality added</change-notes>

    <version>WillBeSetByBuild</version>
    <!-- until-build version is looking into the future might be wrong!! -->
    <!--<idea-version since-build="181" until-build="183.*"/>-->
    <idea-version since-build="203.3645.34"/>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <fileEditorProvider implementation="Editors.FileEditor.TacTextEditorProvider"
                            id="OpalTACEditorProvider"/>
        <fileEditorProvider implementation="Editors.disEditor.DisTextEditorProvider"
                            id="DisTextEditorProvider"/>

        <fileTypeFactory implementation="taclanguage.languageandfiletype.TAC_fileTypeFactory"/>
        <fileTypeFactory implementation="JavaByteCodeLanguage.LanguageAndFileType.JavaByteCodeFileTypeFactory"/>
        <lang.parserDefinition language="TAC"
                               implementationClass="taclanguage.autogenerated.parser.TAC_parserDefinition"/>
        <lang.parserDefinition language="jbc"
                               implementationClass="JavaByteCodeLanguage.autoGenerated.parser.JavaByteCodeParserDefinition"/>
        <lang.syntaxHighlighterFactory language="TAC"
                                       implementationClass="taclanguage.syntaxhighlighter.TAC_syntaxHighlighterFactory"/>
        <lang.syntaxHighlighterFactory language="jbc"
                                       implementationClass="JavaByteCodeLanguage.syntaxhighlighter.JavaByteCodeHighlighterFactory"/>
        <colorSettingsPage implementation="taclanguage.syntaxhighlighter.TAC_colorSettingsPage"/>
        <colorSettingsPage implementation="JavaByteCodeLanguage.syntaxhighlighter.JavaByteCodeColorSettingPage"/>

        <psi.referenceContributor implementation="JavaByteCodeLanguage.psi.JbcReferenceContributor"/>
        <psi.referenceContributor implementation="taclanguage.psi.TacReferenceContributor"/>

        <lang.psiStructureViewFactory language="jbc"
                                      implementationClass="JavaByteCodeLanguage.StructureView.JavaByteCodeStructureViewFactory"/>
        <lang.psiStructureViewFactory language="TAC"
                                      implementationClass="taclanguage.structurview.TAC_structureViewFactory"/>
        <lang.foldingBuilder language="jbc" implementationClass="JavaByteCodeLanguage.folding.JbcFoldingBuilder"/>
        <lang.foldingBuilder language="TAC" implementationClass="taclanguage.folding.TACFoldingBuilder"/>
        <lang.findUsagesProvider language="jbc" implementationClass="com.intellij.lang.java.JavaFindUsagesProvider"/>
        <lang.findUsagesProvider language="TAC" implementationClass="com.intellij.lang.java.JavaFindUsagesProvider"/>
        <!--<codeInsight.lineMarkerProvider language="jbc" implementationClass="JavaByteCodeLanguage.psi.JbcLineMarkerProvider"/>-->
        <!--        <psi.classFileDecompiler implementation=" org.jetbrains.java." order="last"/>-->
        <applicationConfigurable groupId="tools" provider="config.BytecodeConfigurableProvider"
                                 id="bytecodedissassembler.config"/>
        <applicationService serviceImplementation="config.BytecodeConfig"/>
        <notificationGroup displayType="BALLOON" id="OpalPlugin" isLogByDefault="false"/>
    </extensions>

    <actions>
        <!-- Add your actions here-->
        <action id="OpenFileInConsoleToolbarAction"
                class="Actions.DnDJarAction"
                description="Drag and drop to open jar file"
                icon="/icons/jar-gray.png">
            <add-to-group group-id="MainToolBar" anchor="last"/>
        </action>
        <action class="Actions.OpenDialog" id="OpenJarDialog" text="open *jar">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="JumpToJBCEID" class="Actions.openclass.OpenClassFileJBCAction" text="Show Bytecode"
                icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <mouse-shortcut keymap="$default" keystroke="control button3"/>
        </action>

        <action id="JumpToTACFromRMB" class="Actions.openclass.OpenClassFileTACAction" text="Show Three-Address-Code"
                icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <mouse-shortcut keymap="$default" keystroke="control alt button3"/>
        </action>

        <action id="jumptolinejbc" class="Actions.JumpToPcJbc" text="Jump To PC" icon="/icons/jar-gray.png">
            <keyboard-shortcut first-keystroke="alt shift 1" keymap="$default"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="jumptolinetac" class="Actions.JumpToPcTac" text="Jump To PC" icon="/icons/jar-gray.png">
            <keyboard-shortcut first-keystroke="alt shift 2" keymap="$default"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="jumptosource" class="Actions.JumpToSource" text="Jump To Line" icon="/icons/jar-gray.png">
            <keyboard-shortcut first-keystroke="alt shift 3" keymap="$default"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action class="Actions.JumpBetweenEditors" id="BetweenTacAndJbc" text="Jump Between TAC/Bytecode"
                icon="/icons/jar-gray.png">
            <mouse-shortcut keymap="$default" keystroke="control button2"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action class="Actions.ExceptionMarkerAction" id="exceptionmarker" text="Highlight Exception"
                icon="/icons/jar-gray.png">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 3"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="Actions.resolve.JumpToResolveJBC" class="Actions.resolve.JumpToResolveJBC" text="Show Bytecode"
                icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="Actions.resolve.JumpToResolveTAC" class="Actions.resolve.JumpToResolveTAC" text="Show Bytecode"
                icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <projectListeners>
        <listener class="listeners.OpalVirtualFileListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </projectListeners>
</idea-plugin>