<idea-plugin>
    <id>23.bytecode-disassembler</id>
    <name>Bytecode Disassembler</name>
    <vendor email="marcel.dieter@stud.tu-darmstadt.de" >Kollektiv 23</vendor>

    <description><![CDATA[
    OPAL Framework integration for IntelliJ IDEA.<br>
    ]]></description>

    <change-notes>Lots of added functionality. See Readme.</change-notes>

    <version>1.0.4</version>
    <!-- until-build version is looking into the future might be wrong!! -->
    <!--<idea-version since-build="181" until-build="183.*"/>-->
    <idea-version since-build="181"/>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <!--
        <toolWindow id="Outline"
                    factoryClass="toolWindows.OutlineToolWindowFactory"
                    anchor="left"
                    secondary="true"/>

        <toolWindow id="Disassembler"
                    factoryClass="toolWindows.DisassemblerToolWindowFactory"
                    anchor="right"
                    secondary="true"/>
                            <fileEditorProvider implementation="Editors.HTMLEditor.HTMLEditorProvider"
                            id="OpalHTMLEditorProvider"/>
         -->
        <fileEditorProvider implementation="Editors.FileEditor.TacTextEditorProvider"
                            id="OpalTACEditorProvider"/>
        <fileEditorProvider implementation="Editors.disEditor.DisTextEditorProvider"
                            id="DisTextEditorProvider"/>

        <fileTypeFactory implementation="taclanguage.languageandfiletype.TAC_fileTypeFactory"/>
        <fileTypeFactory implementation="JavaByteCodeLanguage.LanguageAndFileType.JavaByteCodeFileTypeFactory"/>
        <lang.parserDefinition language="TAC" implementationClass="taclanguage.autogenerated.parser.TAC_parserDefinition"/>
        <lang.parserDefinition language="jbc" implementationClass="JavaByteCodeLanguage.autoGenerated.parser.JavaByteCodeParserDefinition"/>
        <lang.syntaxHighlighterFactory language="TAC"
                                       implementationClass="taclanguage.syntaxhighlighter.TAC_syntaxHighlighterFactory"/>
        <lang.syntaxHighlighterFactory language="jbc"
                                       implementationClass="JavaByteCodeLanguage.syntaxhighlighter.JavaByteCodeHighlighterFactory"/>
        <colorSettingsPage implementation="taclanguage.syntaxhighlighter.TAC_colorSettingsPage"/>
        <colorSettingsPage implementation="JavaByteCodeLanguage.syntaxhighlighter.JavaByteCodeColorSettingPage"/>

        <psi.referenceContributor implementation="JavaByteCodeLanguage.psi.JbcReferenceContributor"/>
        <psi.referenceContributor implementation="taclanguage.psi.TacReferenceContributor"/>

        <lang.psiStructureViewFactory language="jbc" implementationClass="JavaByteCodeLanguage.StructureView.JavaByteCodeStructureViewFactory"/>
        <lang.psiStructureViewFactory language="TAC" implementationClass="taclanguage.structurview.TAC_structureViewFactory"/>
        <lang.foldingBuilder language="jbc" implementationClass="JavaByteCodeLanguage.folding.JbcFoldingBuilder"/>
        <lang.foldingBuilder language="TAC" implementationClass="taclanguage.folding.TACFoldingBuilder"/>
        <lang.findUsagesProvider language="jbc" implementationClass="com.intellij.lang.java.JavaFindUsagesProvider"/>
        <lang.findUsagesProvider language="TAC" implementationClass="com.intellij.lang.java.JavaFindUsagesProvider"/>

        <!--<codeInsight.lineMarkerProvider language="jbc" implementationClass="JavaByteCodeLanguage.psi.JbcLineMarkerProvider"/>-->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="JumpToJBCEID" class="Actions.OpenClassFileJBCAction" text="Show Bytecode" icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <mouse-shortcut keymap="$default" keystroke="control button3"/>
        </action>

        <action id="JumpToTACFromRMB" class="Actions.OpenClassFileTACAction" text="Show Three-Address-Code" icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <mouse-shortcut keymap="$default" keystroke="control alt button3"/>
        </action>

        <action id="jumptoline" class="Actions.JumpToProgramCounter" text="Jump To PC" icon="/icons/jar-gray.png">
            <keyboard-shortcut first-keystroke="alt shift 1"  keymap="$default"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="jumptosource" class="Actions.JumpToSource" text="Jump To Line" icon="/icons/jar-gray.png">
            <keyboard-shortcut first-keystroke="alt shift 2"  keymap="$default"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action class="Actions.JumpBetweenEditors" id="BetweenTacAndJbc" text="Jump Between TAC/Bytecode" icon="/icons/jar-gray.png">
            <mouse-shortcut keymap="$default" keystroke="control button2"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action class="Actions.ExceptionMarkerAction" id="exceptionmarker" text="Highlight Exception" icon="/icons/jar-gray.png">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 3"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="Actions.JumpToResolveJBC" class="Actions.JumpToResolveJBC" text="Show Bytecode" icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="Actions.JumpToResolveTAC" class="Actions.JumpToResolveTAC" text="Show Bytecode" icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>
    <project-components>
        <component>
            <implementation-class>Components.OpalVirtualFileListener</implementation-class>
            <interface-class>Components.OpalVirtualFileListener</interface-class>
        </component>
    </project-components>
</idea-plugin>