<idea-plugin>
    <id>23.bytecode-disassembler</id>
    <name>OPAL Integration</name>
    <vendor email="marcel.dieter@stud.tu-darmstadt.de" >Kollektiv 23</vendor>

    <description><![CDATA[
    OPAL Framework integration for IntelliJ IDEA.<br>
    ]]></description>

    <change-notes>Lots of added functionality. See Readme.</change-notes>

    <version>0.2.0</version>
    <!-- until-build version is looking into the future might be wrong!! -->
    <idea-version since-build="181" until-build="183.*"/>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <!--
        <toolWindow id="Outline"
                    factoryClass="toolWindows.OutlineToolWindowFactory"
                    anchor="left"
                    secondary="true"/>

        <toolWindow id="Disassembler"
                    factoryClass="toolWindows.DisassemblerToolWindowFactory"
                    anchor="right"
                    secondary="true"/>
                            <fileEditorProvider implementation="Editors.HTMLEditor.HTMLEditorProvider"
                            id="OpalHTMLEditorProvider"/>
         -->
        <fileEditorProvider implementation="Editors.FileEditor.TacTextEditorProvider"
                            id="OpalTACEditorProvider"/>
        <fileEditorProvider implementation="Editors.disEditor.DisTextEditorProvider"
                            id="DisTextEditorProvider"/>

        <fileTypeFactory implementation="syntaxHighlighting.TAC_fileTypeFactory"/>
        <fileTypeFactory implementation="JavaByteCodeLanguage.LanguageAndFileType.JavaByteCodeFileTypeFactory"/>
        <lang.parserDefinition language="TAC" implementationClass="syntaxHighlighting.TAC_parserDefinition"/>
        <lang.parserDefinition language="jbc" implementationClass="JavaByteCodeLanguage.autoGenerated.parser.JavaByteCodeParserDefinition"/>
        <lang.syntaxHighlighterFactory language="TAC"
                                       implementationClass="syntaxHighlighting.TAC_syntaxHighlighterFactory"/>
        <lang.syntaxHighlighterFactory language="jbc"
                                       implementationClass="JavaByteCodeLanguage.syntaxhighlighter.JavaByteCodeHighlighterFactory"/>
        <colorSettingsPage implementation="syntaxHighlighting.TAC_colorSettingsPage"/>
        <colorSettingsPage implementation="JavaByteCodeLanguage.syntaxhighlighter.JavaByteCodeColorSettingPage"/>

        <psi.referenceContributor implementation="JavaByteCodeLanguage.psi.JbcReferenceContributor"/>

        <lang.psiStructureViewFactory language="jbc" implementationClass="JavaByteCodeLanguage.StructureView.JavaByteCodeStructureViewFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="JumpToJBCEID" class="Actions.OpenClassFileAction" text="Show Bytecode" icon="/icons/jar-gray.png">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <action id="JumpToJbcFromRMB" class="Actions.OpenCorrespondingClassFileAction" text="Compile And Show Bytecode" icon="/icons/jar-gray.png">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>

    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>Actions.LoadClassFileComponent</implementation-class>
        </component>
    </application-components>
    <project-components>
        <component>
            <implementation-class>Components.OpalVirtualFileListener</implementation-class>
            <interface-class>Components.OpalVirtualFileListener</interface-class>
        </component>
    </project-components>
</idea-plugin>